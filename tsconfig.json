{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "allowJs": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitThis": true,
      "sourceMap": true,
      "inlineSources": true,
      "sourceRoot": "/"
    },
    "include": ["src/**/*"]
  }